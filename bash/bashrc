# common variables
export MYBASHRC='$HOME/.dotfiles/bash/bashrc'
export MYVIMRC='$HOME/.dotfiles/vim/vimrc'

# general
alias notes='vim + "$HOME/src/gitlab.com/trevorlangston/notes/$(date +%Y)/$(date +%Y%m%d).md"'
alias todo='vim + "$HOME/src/gitlab.com/trevorlangston/notes/todo.md"'

# vim
set -o vi
export EDITOR='vim'
export VISUAL='vim'
export TERM="xterm-256color"
alias vim='/usr/local/bin/vim'
alias tmux="TERM=screen-256color-bce tmux"

# git
alias clone='~/src/github.com/trevorlangston/clone/clone.sh'
alias ggraph='git log --graph --abbrev-commit --decorate --date=relative --all'
alias glog='git log --pretty="%h - %s"'

# paths
export GOPATH=$HOME/go
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin:$HOME/.yarn/bin

# prompt
export PS1="\nin \[\e[36m\]\w\[\e[m\] > "

# docker
alias docker-stop-and-rm='docker stop $(docker ps -a -q) && docker rm $(docker ps -a -q)'

# tmux
alias tm='~/.dotfiles/bin/tm.sh'

# useful stuff
usingport() {
    lsof -n -i4TCP:"$1" | grep LISTEN
}
alias ll='ls -l'
alias updatedb='sudo /usr/libexec/locate.updatedb' # for locate command

# travis
[ -f /Users/tlangston/.travis/travis.sh ] && source /Users/tlangston/.travis/travis.sh

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
